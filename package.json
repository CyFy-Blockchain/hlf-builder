{
  "name": "hlf-builder",
  "version": "1.0.0",
  "description": "This repo will be responsible for building and updating any HLF architecture changes",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "reset-repo": "rm -rf fabric-ca-client fabric-ca-server fabric-ca-server-tls",
    "up-tls-server": "ts-node ./src/scripts/up-tls-server.ts && sh ./commands/start/tls-ca.sh",
    "enroll-tls-admin": "ts-node ./src/scripts/enroll-tls-admin.ts",
    "up-org-server": "ts-node ./src/scripts/up-org-server.ts && sh ./commands/start/org-ca.sh",
    "enroll-org-admin": "ts-node ./src/scripts/enroll-org-admin.ts",
    "register-node-user": "ts-node ./src/scripts/register-node-user.ts",
    "start-peer": "ts-node ./src/scripts/start-peer.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.3.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "uuid": "^10.0.0",
    "yaml": "^2.5.0"
  }
}
